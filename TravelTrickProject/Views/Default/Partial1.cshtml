@using TravelTrickProject.Models.Classes
@model List<Blog>

@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" style="width:280px; height:150px;" />
        </div>
        <div class="left-text">
            <h4>@x.Title</h4>
            <span class="doller">@x.History.ToString("dd.MM.yyyy")</span>
            <p>@x.Explanation.Substring(0, 47)</p>
            <p><a href="/Blog/BlogDetail/@x.ID"><span class="read">Read More</span></a></p>
        </div>
    </div>
}
