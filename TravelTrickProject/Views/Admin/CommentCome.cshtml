@model TravelTrickProject.Models.Classes.Comment
@{
    ViewBag.Title = "CommentCome";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Comment Update</h2>
<br />
@using (Html.BeginForm("CommentUpdate", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.UserName)
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Email)
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
